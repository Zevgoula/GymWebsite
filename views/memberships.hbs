{{!-- MEMBERSHIPS PAGE --}}
<div class = "classes-subtitle" style="padding-top: 100px; padding-bottom: 50px; text-align: center;  font-size: 20px;">
    <h1>MEMBERSHIPS</h1>
</div>
<div class="boxes">
    {{#each membershipsInfo}}
        <div class="box">
            <div class="type_of_membership">
                <h3 class="pricing_type">
                    {{#if_eq length 1}}
                        1 MONTH
                    {{/if_eq}}
                    {{#if_eq length 2}}
                        6 MONTH
                    {{/if_eq}}
                    {{#if_eq length 3}}
                        1 YEAR
                    {{/if_eq}}
                </h3>
            </div>
            <div class="price">
                ${{this.cost}}
            </div>
            <div class="perks" style="padding-right: 10%">
                <div>
                    <div class="perk">
                        <img src="https://uploads-ssl.webflow.com/6255cb896cc97d5faf18caf7/6275389ecf1678cf16fdd1c5_dark-green-check.svg"
                            loading="lazy" alt="" class="feature-check_image">
                            <p>SAUNA INCLUDED</p>
                    </div>
                </div>
                <div class="perk">
                    <img src="https://uploads-ssl.webflow.com/6255cb896cc97d5faf18caf7/6275389ecf1678cf16fdd1c5_dark-green-check.svg"
                        loading="lazy" alt="" class="feature-check_image">
                        <p>INDOOR POOL</p>
                </div>
                <div>
                    <div class="perk">
                        <img src="https://uploads-ssl.webflow.com/6255cb896cc97d5faf18caf7/6275389ecf1678cf16fdd1c5_dark-green-check.svg"
                            loading="lazy" alt="" class="feature-check_image">
                            <p>ALL MEMBER EVENTS</p>
                    </div>
                </div>

            </div>
            <footer>
                <div class="membership-description">
                    {{#if_eq length 1}}
                        <p>Monthly payment, free cancelation</p>
                    {{/if_eq}}
                    {{#if_eq length 2}}
                        <p>One time payment, free cancelation</p>
                    {{/if_eq}}
                    {{#if_eq length 3}}
                        <p>One time payment, free cancelation</p>
                    {{/if_eq}}
                </div>
                <div>
                <button class="anim_button" onclick="window.location.href= '/personal_info/{{../gym}}/{{../class}}/{{this.membership_id}}'"><span></span>Select</button>
                </button>
            </footer>
        </div>
    {{/each}}

</div>
</div>