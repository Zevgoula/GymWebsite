{{#with customerInfo}}
<div class="input-box">
        <h1 style="color: white">
            Account Page
        </h1>
</div>
<form class="form-container" style="width:80%">
    
    
    <div class="input-box">
        <h2>HOME GYM: {{../homeGym.location}}</h2>
    </div>

    <div class="input-box">
        <h2>Name: {{fname}} {{lname}}</h2>
    </div>
    
    <div class="input-box">
        <h2>Email: {{email}}</h2>
    </div>

    <div class="input-box">
        <h2>Phone: {{phone_number}}</h2>
    </div>

    <div class="input-box">
        <h2>Address: {{address}}</h2>
    </div>

    <div class="input-box">
        <h2>City: {{city}}</h2>
    </div>

    <div class="input-box">
        <h2>State: {{state}}</h2>
    </div>

    <div class="input-box">
        <h2>Zip code: {{zip_code}}</h2>
    </div>
</form>
{{/with}}
<form class="form-container" style="width:80%">
{{#if active_memberships}}
    <h2 style="color: white">
            Active memberships
    </h2>
    {{#each active_memberships}}
        
        <h2 style="color: white">
            Type: {{this.name}}
        </h2>
        <h2 style="color: white">
            Start Date: {{this.start_date}}
        </h2>
        <h2 style="color: white">
            End Date: {{this.exp_date}}
        </h2>
        <button class='anim_button' onclick="window.location.href='/acount_page/{{this.membership_id}}'"><span></span>Delete Membership</button>
    {{/each}}
{{/if}}
{{#if inactive_memberships}}
    <h2 style="color: white">
            Inactive memberships
    </h2>
    {{#each inactive_memberships}}
        
        <h2 style="color: white">
            Type: {{this.name}}
        </h2>

        <h2 style="color: white">
            Start Date: {{this.start_date}}
        </h2>

        <h2 style="color: white">
            End Date: {{this.exp_date}}
        </h2>
        
    {{/each}}
{{/if}}

{{^customerInfo}}
    <h2 style="color: white">
        Account Page
    </h2>
    <h2 style="color: white">
        Please log in to view your account information.
    </h2>
{{/customerInfo}}
</form>


