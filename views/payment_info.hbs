<form action="/payment_info/{{gym_id}}/{{class_id}}/{{membership_id}}" method="post">
    <h1>Payment info</h1>
    <div class="input-box">
        <input onkeydown="return /[a-z]/i.test(event.key)" name="fname" placeholder="First name" required>
    </div>
    <div class="input-box">
        <input onkeydown="return /[a-z]/i.test(event.key)" name="lname" placeholder="Last name" required>
    </div>
    <div class="input-box">
        <input id="ccn" type="tel" inputmode="numeric"
        placeholder="Credit card number" name="ccn" required>
    </div>
    <div class="input-box">
        <input id="exp_date" type="tel" name="exp_date" inputmode="numeric"
        placeholder="Expiration date" required>
    </div>
    <div class="input-box">
        <input type="text" maxlength="3" name="cvv" placeholder="CVV" required>

    </div>
    <div class="remember-forgot">
        <label><input type="checkbox">Remember me.</label>
    </div>
    <button type="submit" class="btn">Submit</button>

    
</form>
