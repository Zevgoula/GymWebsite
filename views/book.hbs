<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking Form</title>
    <style>
        /* Add your existing styles here */

        .book-button.active,
        .book-button2.active {
            background-color: #007bff; /* Active background color */
            color: white; /* Active text color */
        }
    </style>
</head>
<body>
    <div class="book-placeholder">
        <div class="book-title">
            <h1>MAKE A BOOKING</h1>
        </div>
        <form class="book-form-container" action="/book" method="POST">
            <div class="book-upper-container">
                <div class="book-upper-title">
                    <h1>CLASS</h1>
                </div>
                <div class="book-buttons-container">
                    {{#each classes}}
                        <button type="button" class="book-button" onclick="selectClass('{{this.name}}')"><span></span>{{this.name}}</button>
                    {{/each}}
                </div>
            </div>
            <div class="book-upper-container2">
                <div class="book-upper-title">
                    <h1>CLUB</h1>
                </div>
                <div class="book-buttons-container2">
                    {{#each clubs}}
                        <button type="button" class="book-button2" onclick="selectLocation('{{this.location}}')"><span></span>{{this.location}}</button>
                    {{/each}}
                </div>
            </div>
            <div class="book-lower-container">
                <h1>SEARCH DATE</h1>
                <input type="date" name="date" id="date" required>
                <button type="submit" class="anim_button"><span></span>SEARCH</button>
            </div>
            <input type="hidden" id="selectedClass" name="class_id">
            <input type="hidden" id="selectedLocation" name="gym_id">
        </form>
    </div>
</body>
</html>


<script>
    let selectedClass = null;
    let selectedLocation = null;

    function selectClass(className) {
        selectedClass = className;
        // Add active class to the selected button
        document.querySelectorAll('.book-button').forEach(btn => {
            btn.classList.remove('active');
            if (btn.textContent.trim() === className) {
                btn.classList.add('active');
            }
        });
        // Set the selected class value in the hidden input
        document.getElementById('selectedClass').value = className;
    }

    function selectLocation(location) {
        selectedLocation = location;
        // Add active class to the selected button
        document.querySelectorAll('.book-button2').forEach(btn => {
            btn.classList.remove('active');
            if (btn.textContent.trim() === location) {
                btn.classList.add('active');
            }
        });
        // Set the selected location value in the hidden input
        document.getElementById('selectedLocation').value = location;
    }
</script>

